{
    "AllowedHosts": "*",
    "Serilog": {
        "Properties": {
            "ApplicationName": "psp-generic-service",
            "Env": "local",
            "logType": "psp-generic-service"
        },
        "Using": [ "Serilog.Sinks.LogstashHttp" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "MassTransit": "Fatal"
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
        "WriteTo": [
            {
                "Name": "LogstashHttp",
                "Args": {
                    "logstashUri": "https://pay.dev.lemonway.com/logstash"
                }
            },
            { "Name": "Console" }
        ]
    },
    "MetricsOptions": {
        "DefaultContextLabel": "order-service",
        "Enabled": true
    },
    "MetricsWebTrackingOptions": {
        "ApdexTrackingEnabled": true,
        "ApdexTSeconds": 0.1,
        "IgnoredHttpStatusCodes": [ 404 ],
        "IgnoredRoutesRegexPatterns": ["/swagger/.*", "/s/.*"],
        "OAuth2TrackingEnabled": true
    },
    "MetricEndpointsOptions": {
        "MetricsEndpointEnabled": true,
        "MetricsTextEndpointEnabled": true,
        "EnvironmentInfoEndpointEnabled": true
    }

}